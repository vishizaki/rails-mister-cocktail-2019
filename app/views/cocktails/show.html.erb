<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
<p><%= dose.description %> <%= dose.ingredient.name %> 
  <%= link_to cocktail_dose_path(@cocktail, dose), method: :delete do %>
    <i class="fas fa-trash-alt"></i>
  <% end %> 
</p>
<% end %>



<%= link_to 'Add a new ingredient', new_cocktail_dose_path(@cocktail) %>
